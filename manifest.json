{
  "manifest_version": 2,
  "name": "BLNS validator",
  "description": "This plugin tests a web application for bugs/ vulnerabilities using the big list of naughty strings",
  "version": "1.0",
  "browser_action": {
    "default_popup": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["textbox.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}